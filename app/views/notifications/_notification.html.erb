<%= link_to user_notification_path(user, notification), method: :patch, class:"notification-link", remote: true do %>
  <%= content_tag(:div, class: "notification-container #{unread_css(notification)}", id: "this-notification-#{notification.id}") do %>
    <div class="notification-container <%= unread_css(notification) %>">
      <%= simple_format notification.message %>
      <span><%= time_ago_in_words notification.created_at %></span>
    </div>
  <% end %>
<% end %>
