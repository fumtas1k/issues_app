<% provide(:title, t(".sign_in")) %>
<div class="login-form-container">
  <div class="login-form-header">
    <h2 class="login-form-title"><%= t("app") %></h2>
  </div>
  <%= form_with(scope: resource, as: resource_name, url: session_path(resource_name), class: "login-form", local: true) do |f| %>
    <div class="field">
      <%= f.label :code, class: "sr-only" %>
      <%= f.text_field :code, autofocus: true, autocomplete: "code", class: "form-control check-blank", inputmode: "numeric", placeholder: User.human_attribute_name(:code), required: true %>
    </div>
    <div class="field">
    <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control check-blank", placeholder: User.human_attribute_name(:password), required: true %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field remember-field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit t('.sign_in'), class: "btn btn-primary", id: "judge-active" %>
    </div>
  <% end %>
</div>
<div class="enter-login-container">
  <p><%= t(".not_have_account") %> <%= render "devise/shared/links" %></p>
</div>

<%= javascript_pack_tag 'vanta_background', 'data-turbolinks-track': 'reload' %>
