<div class="login-form-container">
  <div class="login-form-sub-container">
    <div class="login-form-header">
      <h5 class="login-form-title"><%= t("views.users.edit_avatar.title") %></h5>
    </div>
    <%= form_with(model: @user, url: registration_path(@user, avatar: true, user_id: @user.id), class: "login-form", local: true) do |f| %>
      <%= render "devise/shared/error_messages", resource: @user %>
      <div class="avatar-container">
        <%= image_tag prepare_avatar(@user), class: "avatar200" %>
      </div>
      <%= content_tag(:small, t("views.users.edit_avatar.delete-avatar-caution"), class: "delete-avatar-caution attention") %>
      <div class="field">
        <%= f.label :avatar, class: "sr-only" %>
        <%= f.file_field :avatar, autocomplete: "avatar", class: "form-control", accept: "image/png, image/jpeg, image/jpg, image/gif, image/bmp" %>
      </div>
        <%= f.submit class: "btn btn-primary", data: {confirm: t("views.users.edit_avatar.confirm")} %>
    <% end %>
    <%= link_to t('devise.shared.links.back'), :back, class: "btn btn-info btn-block" %>
  </div>
</div>
