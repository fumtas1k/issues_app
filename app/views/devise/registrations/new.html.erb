<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: User.human_attribute_name(:name), require: true %>
  </div>

  <div class="field">
    <%= f.label :code, class: "sr-only" %>
    <%= f.text_field :code, autocomplete: "code", class: "form-control", inputmode: "numeric", placeholder: User.human_attribute_name(:code), require: true %>
  </div>

  <div class="field">
    <%= f.label :entered_at, class: "sr-only" %>
    <%= f.date_field :entered_at, autocomplete: "date", class: "form-control", require: true %>
  </div>

  <div class="field">
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: User.human_attribute_name(:email), require: true %>
  </div>

  <div class="field">
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: User.human_attribute_name(:password), require: true, minlength: @minimum_password_length %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: User.human_attribute_name(:password_confirmation), require: true, minlength: @minimum_password_length %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
