<%= button_to(select_path_depend_on_stock(issue), method: select_method_depend_on_stock(issue), class: "btn", id: "stock-btn-#{issue.id}", remote: true) do %>
  <% if stock_presence(issue) %>
    <span class="material-icons text-success">bookmark</span>
  <% else %>
    <span class="material-icons text-success">bookmark_border</span>
  <% end %>
  <%= issue.reload.stocks.size %>
<% end %>
