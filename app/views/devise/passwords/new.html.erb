<div class="login-form-container">
  <div class="login-form-header">
    <h2 class="login-form-title"><%= t("app") %></h2>
  </div>
  <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), class: "login-form", local: true) do |f| %>
    <h6 class="login-form-subtitle"><%= t('.forgot_your_password') %></h6>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: User.human_attribute_name(:email), require: true %>
    </div>
    <div class="actions">
      <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-primary", id: "active-btn" %>
    </div>
  <% end %>
</div>
<div class="enter-login-container">
  <p><%= render "devise/shared/links" %></p>
</div>

<%= javascript_pack_tag 'vanta_background', 'data-turbolinks-track': 'reload' %>
