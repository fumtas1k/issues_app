<div class="message">
  <% if message.user.id != current_user.id %>
    <div class="message-partner">
      <%= image_tag prepare_avatar(message.user), class: "avatar25" %>
      <div class="message-content">
        <%= message.content %>
      </div>
      <div class="fs-12">
        <span><%= l message.created_at, format: :short %></span>
      </div>
    </div>
  <% else %>
    <div class="message-current_user">
      <div class="d-flex flex-column fs-12 text-right">
        <%= content_tag(:span,translate_of(message.read), id: "message-read-#{message.id}") %>
        <span class="fs-12"><%= l message.created_at, format: :short %></span>
      </div>
      <div class="message-content main-color-bg">
        <%= message.content %>
      </div>
    </div>
  <% end %>
</div>
