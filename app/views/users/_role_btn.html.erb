<%= button_to(user_registration_path(user_id: user.id), name: "mentor", method: :put, class: "btn btn-outline-primary", remote: true, data: role_confirm(user)) do %>
  <% if user.mentor %>
    <%= t("views.users/role.mentor") %>
  <% else %>
    <%= t("views.users/role.non-mentor") %>
  <% end %>
<% end %>
