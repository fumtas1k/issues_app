<h2><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :code, class: "sr-only" %>
    <%= f.text_field :code, autofocus: true, autocomplete: "code", class: "form-control", inputmode: "numeric", placeholder: User.human_attribute_name(:code), require: true %>
  </div>

  <div class="field">
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: User.human_attribute_name(:password), require: true %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('.sign_in'), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
